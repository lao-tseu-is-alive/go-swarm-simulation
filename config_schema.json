{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "worldWidth": { "type": "number", "minimum": 100 },
    "worldHeight": { "type": "number", "minimum": 100 },
    "numRedAtStart": { "type": "integer", "minimum": 0 },
    "numBlueAtStart": { "type": "integer", "minimum": 0 },
    "detectionRadius": { "type": "number", "minimum": 0 },
    "defenseRadius": { "type": "number", "minimum": 0 },
    "contactRadius": { "type": "number", "minimum": 0 },
    "maxSpeed": { "type": "number", "minimum": 0 },
    "aggression": { "type": "number", "minimum": 0, "maximum": 5 },
    "cohesionWeight": { "type": "number", "minimum": 0 },
    "alignmentWeight": { "type": "number", "minimum": 0 },
    "separationWeight": { "type": "number", "minimum": 0 }
  },
  "required": [
    "worldWidth",
    "worldHeight",
    "numRedAtStart",
    "numBlueAtStart",
    "detectionRadius",
    "defenseRadius",
    "contactRadius",
    "maxSpeed",
    "aggression"
  ]
}
